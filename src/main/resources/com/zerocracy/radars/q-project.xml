      <opt>
        <name>title</name>
        <regex>[\d\w._-]{3,}</regex>
        <help>New project title</help>
        <optional>true</optional>
      </opt>
    </opts>
  </cmd>
  <cmd>
    <code>Set on pause</code>
    <regex>pause</regex>
    <label>pause</label>
    <help>Set the project on pause</help>
    <invited>false</invited>
    <opts>
      <opt>
        <name>flag</name>
        <regex>(on|off)</regex>
        <help>Either 'on' or 'off'</help>
        <optional>true</optional>
      </opt>
    </opts>
  </cmd>
  <cmd>
    <code>Bootstrap</code>
    <regex>bootstrap</regex>
    <label>bootstrap</label>
    <help>Bootstrap it right after adding Zerocrat to a Slack channel</help>
    <invited>true</invited>
  </cmd>
  <cmd>
    <code>Destroy</code>
    <regex>destroy</regex>
    <label>destroy</label>
    <help>Destroy all project files on our servers</help>
    <invited>false</invited>
  </cmd>
  <cmd>
    <code>Refund</code>
    <regex>refund</regex>
    <label>refund</label>
    <help>Refund the project</help>
    <invited>false</invited>
    <opts>
      <opt>
        <name>amount</name>
        <regex>\$\d{1,}</regex>
        <help>Amount to refund in USD</help>
      </opt>
    </opts>
  </cmd>
